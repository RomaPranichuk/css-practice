<header class='header'>
	<a href="#test">
		{{> logo}}
	</a>
	<nav class='header_nav'>
		<div class="header_nav_right">
			{{>nav list=header}}
		</div>
	</nav>
</header>

<main class="main">
	<div class="hero">
		{{#with info}}
			<h1 class="hero_title">{{title}}</h1>
			<p class="hero_text">{{description}}</p>
		{{/with}}
	</div>
	{{#with form}}
		<div class="form">
			<div class="form_input_list">
				{{#each inputs}}
					<input type="{{type}}" placeholder="{{placeholder}}" class="form_input" name="{{name}}" id="form-input-{{id}}" />
				{{/each}}
			</div>

			<div class="form_checkbox">
				{{#with checkbox}}
					<input type="checkbox" name="{{name}}" id="{{name}}">
					<label for="{{name}}">{{label}}</label>
				{{/with}}
			</div>

			<button type="submit" class="form_button">{{button}}</button>

			<div class="form_border"></div>

			<p class="form_info">{{info}}</p>
		</div>
	{{/with}}
</main>

<div class="updates">
	{{#with updates}}
		<h2 class="updates_title">{{title}}</h2>

		{{#each list}}
			<div class="upd_2">
				<div class="upd_badges">
					<img src="https://picsum.photos/32/32" alt="Update image" class="upd_image">
				</div>
				<div class="upd">
					<strong class="upd_nickname">{{nickname}}</strong>
					<p class="upd_description">{{description}}</p>
				</div>
			</div>
		{{/each}}

		{{#with show_all}}
			<a href="{{url}}" class="updates_link">{{text}}</a>
		{{/with}}
	{{/with}}
</div>

<div class="expiriences">
	{{#with expirience}}
		<h1 class="expirience_title">{{title}}</h1>
		<span class="expirience_badge">{{badge}}</span>
		
			<div class="exp_card">
				{{#each list}}
					<div class="exp">
						<h3 class="exp_name">{{name}}</h3>
						<p class="exp_details">{{details}}</p>
					</div>
				{{/each}}
			</div>
	{{/with}}
</div>

<footer class="footer" id="test">
	<div>
		{{> logo}}
		<span class="footer_copyright">Copyright 2023-2024</span>
	</div>

	{{#each footer}}
		<div>
			<span class="footer_title">{{title}}</span>
			{{>nav list=links isVertical=true}}
		</div>
	{{/each}}
</footer>