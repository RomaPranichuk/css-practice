<html>

  <head>
    <title>
      Dashboard page
    </title>
    <meta charset="utf-8" />

    <link rel="apple-touch-icon" sizes="180x180" href="/fav/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/fav/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/fav/favicon-16x16.png" />
    <link rel="manifest" href="/fav/site.webmanifest" />
    <link rel="mask-icon" href="/fav/safari-pinned-tab.svg" color="#5bbad5" />
    <meta name="msapplication-TileColor" content="#da532c" />
    <meta name="theme-color" content="#ffffff" />

    <link href="css/normalize.css" rel="stylesheet" />

    <link href="css/dashboard.css" rel="stylesheet" />

    <meta
      name="viewport"
      content="viewport-fit=cover, width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no"
    />
  </head>

  <body>
    <div class="page page--dashboard">
      <aside class="page__aside aside vertical vertical--big">
        <div class="text aside__logo">
          Sidebar
        </div>
        <nav class="vertical vertical--small">
          <a href="#" class="nav-button nav-button--active click">
            <span class="icon nav-button__icon" style="background-image: url('/svg/nav/home.svg');"></span>
            <span class="text text--light">Home</span>
          </a>

          <a href="" class="nav-button click">
            <span class="icon nav-button__icon" style="background-image: url('/svg/nav/order.svg');"></span>
            <span class="text text--light">Orders</span>
          </a>

          <a href="" class="nav-button click">
            <span class="icon nav-button__icon" style="background-image: url('/svg/nav/product.svg');"></span>
            <span class="text text--light">Products</span>
          </a>
        </nav>
      </aside>

      <header class="header">
        <div class="layout header__content text text--small">
          <div class="header__search relative">
            <input type="text" placeholder="Search" class="field field--header" />

            <span class="icon header__icon-search" style="background-image: url('/svg/header/search.svg');"></span>

            <span
              class="icon icon--header-settings icon--button icon--color-blue click"
              style="background-image: url('/svg/header/settings.svg');"
            ></span>
          </div>

          <div class="header__icons">
            <span
              class="icon icon--header-about icon--button icon--color-light-yellow click"
              style="background-image: url('/svg/header/live.svg');"
            ></span>

            <span
              class="icon icon--header-about icon--button icon--color-light-blue click"
              style="background-image: url('/svg/header/language.svg');"
            ></span>

            <span
              class="icon icon--header-about icon--button icon--color-light-yellow click"
              style="background-image: url('/svg/header/messages.svg');"
            ></span>
          </div>
        </div>
      </header>

      <main class="main">
        <div class="layout">
          <section class="box analytic__block">
            <div class="analytic analytic--double analytic--purple">
              <span
                class="icon analytic__button icon--button icon--color-purple click"
                style="background-image: url('/svg/analytic/cash.svg');"
              ></span>

              <div class="relative vertical vertical--small">
                <div class="analytic__title text text--light">$500.00</div>
                <div class="text text--lighter">Total earning</div>
                <span class="icon analytic__arrow" style="background-image: url('/svg/analytic/purple-arrow.svg');"></span>
              </div>
            </div>

            <div class="analytic analytic--double analytic--blue">
              <span
                class="icon analytic__button icon--button icon--color-blue click"
                style="background-image: url('/svg/analytic/order.svg');"
              ></span>

              <div class="vertical vertical--small">
                <div class="analytic__title text text--light">$961</div>
                <div class="text text--lighter">Total Order</div>
              </div>
            </div>

            <div class="analytic analytic--blue">
              <div class="analytic__content">
                <span
                  class="icon analytic__button icon--button icon--color-blue click"
                  style="background-image: url('/svg/analytic/cash.svg');"
                ></span>
                <div class="analytic__vertical">
                  <div class="analytic__title-2 text text--light">$203k</div>
                  <div class="text text--lighter">Total Income</div>
                </div>
              </div>
            </div>

            <div class="analytic analytic--grey">
              <div class="analytic__content">
                <span
                  class="icon analytic__button icon--button icon--color-light-yellow click"
                  style="background-image: url('/svg/analytic/market.svg');"
                ></span>
                <div class="analytic__vertical">
                  <div class="analytic__title-2 text">$203k</div>
                  <div class="text text--grey">Total Income</div>
                </div>
              </div>
            </div>
          </section>
        </div>
        <div class="layout payment-purchase">
          <section class="box purchase__block">
            <div class="purchase__section-0">
              <h1 class="text purchase__title">Purchase list</h1>
              <div class="divider"></div>
            </div>

            <div class="purchase__section">
              <div class="purchase__vector">
                <div class="text">ID437661</div>
                <p class="text">May 11, 2023, 14:21</p>
              </div>

              <div class="purchase__vector">
                <div class="text">AirOn ProCam</div>
                <p class="text">7/8 USB Type-C</p>
              </div>

              <div class="purchase__vector">
                <div class="text">132.32 EUR</div>
                <p class="text purchase--warning">Not paid</p>
              </div>

              <div class="purchase__vector">
                <div class="text">Customer</div>
                <p class="text">robin@com.de</p>
              </div>
            </div>

            <div class="divider"></div>

            <div class="purchase__section">
              <div class="purchase__vector">
                <div class="text">ID437661</div>
                <p class="text">May 11, 2023, 14:21</p>
              </div>

              <div class="purchase__vector">
                <div class="text">PHILIPS Essential</div>
                <p class="text">HD9200/90</p>
              </div>

              <div class="purchase__vector">
                <div class="text">543 USD</div>
                <p class="text purchase--success">Pay by <span class="text--uppercase">Stripe</span></p>
              </div>

              <div class="purchase__vector">
                <div class="text">Customer</div>
                <p class="text">dima@com.ua</p>
              </div>
            </div>
          </section>

          <section class="box payment__block">
            <div class="payment__section-0">
              <h2 class="payment__title text">Payment</h2>
              <div class="divider"></div>
            </div>

            <div class="payment__section-1">
              <div class="payment__radio click">
                <input type="radio" class="click" checked />
                <label class="text click">Credit card</label>
              </div>

              <div class="payment__radio click">
                <input type="radio" class="click" />
                <label class="text click">Debit card</label>
              </div>

              <div class="payment__radio click">
                <input type="radio" class="click" />
                <label class="text click">PayPal</label>
              </div>
            </div>

            <div class="payment__section-2">
              <div class="payment__fields">
                <label for="" class="text">Name on card</label>
                <input type="text" class="payment__field" />
              </div>

              <div class="payment__fields">
                <label for="" class="text">Credit card number</label>
                <input type="text" class="payment__field" />
              </div>

              <div class="payment__fields">
                <label for="" class="text">Expiration</label>
                <input type="text" class="payment__field" />
              </div>

              <div class="payment__fields">
                <label for="" class="text">CVV</label>
                <input type="text" class="payment__field" />
              </div>
            </div>

            <div class="divider"></div>

            <div class="payment__section-3">
              <div class="relative payment__fields click">
                <label class="text">Country</label>
                <div class="payment__select-field field--select">
                  <span class="text">Choose...</span>
                </div>
                <select class="field__select">
                  <option value="country">Ukraine</option>
                  <option value="country">Portugal</option>
                  <option value="country">USA</option>
                  <option value="country">China</option>
                  <option value="country">UK</option>
                </select>
                <span class="black__arrow arrow--mode" style="background-image: url(/svg/arrow-down.svg)"></span>
              </div>
              <div class="relative payment__fields click">
                <label class="text">State</label>
                <div class="payment__select-field field--select">
                  <span class="text">Choose...</span>
                </div>
                <select class="field__select">
                  <option value="state">Los Angeles</option>
                  <option value="state">Texas</option>
                  <option value="state">London</option>
                  <option value="state">Kiev</option>
                  <option value="state">Yasinya</option>
                </select>
                <span class="black__arrow arrow--mode" style="background-image: url(/svg/arrow-down.svg)"></span>
              </div>
            </div>

            <div class="divider"></div>

            <div class="payment__button click">
              <a href="https://github.com/" class="text text--light payment--button">Continue to checkout</a>
            </div>
          </section>
        </div>
      </main>
    </div>
  </body>

</html>