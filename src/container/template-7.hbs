<div class='hero'>
    {{#with hero}}
        <h1 class='hero_title'>{{title}}</h1>
        <p class='hero_text'>{{description}}</p>

        {{#with button}}
            <a href='{{url}}' class='hero_button'>{{text}}</a>
        {{/with}}
    {{/with}}
</div>

<div class='about'>
    {{#with about}}
        <h1 class='about_heading'>{{heading}}</h1>
        <p class='about_info'>{{info}}</p>
    {{/with}}
</div>

<div class='article'>
    <div class='article_heading'>
        <h1 class='article_head_title'>Our Articles</h1>
        <a href='https://github.com/' class='article_head_button'>View All</a>
    </div>

    <div class='article_dark_card'>
        {{#each articles}}
			{{> articleCardDark data=this}}
		{{/each}}
    </div>
</div>